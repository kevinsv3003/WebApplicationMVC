                        <div class="mx-auto mb-40"></div>

                        <div id="formLogin" class="login-box well" style="box-shadow: 20px 26px 35px -9px rgba(0,0,0,0.88);">
                            <div class="login-box-body">
                                <p class="login-box-msg" style="color: black; font-weight:bold">Iniciar sesión</p>

                                <div class="form-group has-feedback">
                                    <input id="txtNombreUsuario" required="required" class="form-control" placeholder="Usuario o Correo Electónico" />
