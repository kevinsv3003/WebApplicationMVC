    @Scripts.Render("~/AdminLTE/LoginPage/js/vendor/jquery-2.2.4.min.js")
    @Scripts.Render("~/Scripts/toastr.min.js")

    <script>
        toastr.options = {
            "closeButton": true,
            "debug": true,
            "newestOnTop": true,
            "progressBar": false,
            "positionClass": "toast-bottom-full-width",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": 500,
            "hideDuration": 500,
            "timeOut": 2500,
            "extendedTimeOut": 100,
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
    </script>

    <script>

        function RestaurarContra() {
            $("#formLogin").addClass("d-none");
            $("#formRestaurarContraseña").removeClass("d-none");
            $("#formRestaurarContraseña").addClass("animated flipInY");
        }

        function FormLogin() {
            $("#formRestaurarContraseña").addClass("d-none");
            $("#formLogin").removeClass("d-none");
            $("#formLogin").addClass("animated flipInY");
        }

        function Loguear() {
            debugger;
            var usuario = $("#txtNombreUsuario").val();
            var contra = $("#txtContraseña").val();
            var data = JSON.stringify({ usuario: usuario, contra: contra });
            var url = '@Url.Action("_Loguear", "Account")';
            $.ajax({
                type: "POST",
                url: url,
                data: '{usuario: "' + usuario + '", contra: "' + contra + '" }',
                contentType: "application/json; charset=utf-8",
                dataType: "html",
                async: false,
                success: function (response) {
                    toastr.success("Excelente"+ ", favor verifique nuevamente!", 'Excelente', { timeOut: 3000 }) 
                },
                error: function (response) { toastr.error("Error" + ", favor verifique nuevamente!", 'Error', { timeOut: 3000 }) }
            });
        }


    </script>

